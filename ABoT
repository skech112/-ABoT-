유튜브 영상:https://www.youtube.com/watch?v=9x7Yu8bQhlc

아두이노 코드
#include <Servo.h>
Servo r;
Servo l;

void setup(){
  r.attach(12);
  l.attach(13);
}
void loop(){
  r.write(1700);
  l.write(1700);
  delay(500);
  r.write(1300);
  l.write(1300);
  delay(500);
  r.write(1700);
  l.write(1700);
  delay(500);
  r.write(1300);
  l.write(1300);
  delay(500);
  r.write(1300);
  l.write(1700);
  delay(2000);
  r.write(1300);
  l.write(1300);
  delay(500);
  r.write(1700);
  l.write(1700);
  delay(2000);
  r.write(1700);
  l.write(1300);
  delay(1500);
}

